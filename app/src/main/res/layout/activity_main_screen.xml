<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vadimgoutsouk.nait.ca.todo_or_not_lab2.MainScreen"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/activity_main"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/app_name2"
      android:background="#98FB98"
      android:textAlignment="center"
      android:layout_weight="0.09" />


  <Space
      android:layout_width="match_parent"
      android:layout_height="50sp" />

                <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
      android:weightSum="1">


    <EditText
        android:id="@+id/input_list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="create a new list... "
        android:layout_weight="0.64" />

    <Button
                      android:id="@+id/button_save_list"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="save list"
        android:layout_weight="0.35" />
                  </LinearLayout>



                 <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">


                   <TextView
                        android:layout_width="171dp"
                        android:layout_height="match_parent"
                        android:text="select list..."
                        android:textColor="#980098"/>

                   <Spinner
                       android:id="@+id/spinner_list_names"
                       android:layout_width="200dp"
                       android:layout_height="40dp"
                       android:dropDownWidth="300dp"
                       android:prompt="@string/prompt_spinner"


                       />
                 </LinearLayout>
  <ListView
      android:id="@+id/listview_items"
      android:layout_width="wrap_content"
      android:layout_height="200sp"
      android:background="#6AAACC">

  </ListView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                          <EditText
                              android:id="@+id/input_item"
                              android:layout_width="200dp"
                              android:layout_height="wrap_content" />

                          <Button
                              android:id="@+id/button_add_item"
                              android:layout_width="126dp"
                              android:layout_height="66dp"
                              android:text="add items"/>



                        </LinearLayout>


</LinearLayout>
